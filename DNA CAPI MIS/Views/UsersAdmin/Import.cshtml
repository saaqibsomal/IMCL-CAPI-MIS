@model DNA_CAPI_MIS.Models.RegisterViewModel
@{
    ViewBag.Title = "Import";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Import", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Import User Accounts</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    if (ViewBag.FailedUsers != null && ViewBag.FailedUsers.Length > 0)
    {
    <p class="text-danger">@{WriteLiteral("Unable to import following users: " + ViewBag.FailedUsers);}</p>
    <p class="text-danger">@ViewBag.AdditionalErrorMessage</p>
    }

    <div class="form-group">
        @Html.Label("User Login IDs (comma separated)", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextArea("usersToImport", "", 8, 0, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.Password("userPassword", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">
            Select User Role
        </label>
        <div class="col-md-10">
            @foreach (var item in (SelectList)ViewBag.RoleId)
            {
                <input type="checkbox" name="SelectedRoles" value="@item.Value" class="checkbox-inline" />
                @Html.Label(item.Value, new { @class = "control-label" })
            }
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Import" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
