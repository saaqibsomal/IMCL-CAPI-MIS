@model IEnumerable<DNA_CAPI_MIS.Models.ProjectsList>

@{
    ViewBag.Title = "Select a Project";
    Layout = "~/Views/Shared/_Layout_Modal.cshtml";
}
@section Scripts {
    <script>
        var viewURL = "/Designer/SelectProject/";
    </script>
    <script src="~/Content/Survey/openproject.js"></script>

    <script language="javascript">
        $(document).ready(function () {
            // Attach a submit handler to the form
            $("#selectButton").on('click', function (event) {

                // Stop form from submitting normally
                event.preventDefault();

                BootstrapDialog.closeAll();
            });
        });
    </script>
}

<link href="~/Content/DSDS/dsds.css" rel="stylesheet" type="text/css" />

@*CSS Class desktop is used for overlay*@

<style>
    .optionsRadios {
        padding-right: 15px;
        padding-left: 15px;
    }
</style>

<div class="row desktop">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title" style="width:100%">Projects</h3>
                <div class="box-tools">
                    <div class="input-group col-md-2 pull-right" style="width:50%">
                        <input type="text" id="projectFilter_keyword" name="table_search" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Name" />
                        <div class="input-group-btn">
                            <button class="btn btn-sm btn-default" id="projectFilter_name"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                    <div class="input-group col-md-5 pull-left" style="width:50%">
                        <div class="radio inline">
                            <label class="optionsRadios col-xs-3">
                                <input class="form-control input-sm" type="checkbox" name="optionsRadios" id="projectFilter_draft" value="D" checked="checked">
                                Draft
                            </label>
                        </div>
                        <div class="radio inline">
                            <label class="optionsRadios col-xs-3">
                                <input class="form-control input-sm" type="checkbox" name="optionsRadios" id="projectFilter_test" value="T" checked="checked">
                                Test
                            </label>
                        </div>
                        <div class="radio inline">
                            <label class="optionsRadios col-xs-3">
                                <input class="form-control input-sm" type="checkbox" name="optionsRadios" id="projectFilter_published" value="P" checked="checked">
                                Published
                            </label>
                        </div>
                        <div class="radio inline">
                            <label class="optionsRadios col-xs-3">
                                <input class="form-control input-sm" type="checkbox" name="optionsRadios" id="projectFilter_closed" value="C">
                                Closed
                            </label>
                        </div>
                        <!--<div class="radio inline">
                            <label class="optionsRadiosAll col-xs-2">
                                <input class="form-control input-sm" type="checkbox" name="optionsRadios" id="projectFilter_all" value="">
                                All
                            </label>
                        </div>-->
                    </div>
                </div>
            </div><!-- /.box-header -->
            <div class="box-body table" style="width:100%">
                <select id="SelectedProject" style="width:100%">
                    @foreach (var item in Model)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div><!-- /.box-body -->
        </div><!-- /.box -->

        <div class="form-group">
            <div>
                <input type="submit" value="Select Project" class="btn btn-default" id="selectButton" />
            </div>
        </div>

    </div>
    <!-- Loading (remove the following to stop the loading)-->
    <div class="overlay" style="display:none;"></div>
    <div class="loading-img" style="display: none;"></div>
    <!-- end loading -->
</div>
