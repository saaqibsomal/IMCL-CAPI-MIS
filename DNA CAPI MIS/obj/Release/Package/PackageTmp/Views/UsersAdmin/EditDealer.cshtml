
@model DNA_CAPI_MIS.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit Dealer";
}

<h2>EditDealer.</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Edit User Form.</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.Label("Dealer :", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @{ 
                    string dealername = @ViewBag.Branch;
                }
                @Html.TextBox("Dealer", dealername, new { @class = "form-control", @required = "true", @pattern = ".{6,}", @title = "6 characters minimum",@value= @ViewBag.Branch })

            </div>
        </div>
        <div class="form-group">
            @Html.Label("City :", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
              
                @Html.DropDownList("City",null, new { @class = "form-control", @requried = "true" })
                

            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        @*<div class="form-group">
            @Html.Label("Roles", new { @class = "control-label col-md-2" })
            <span class=" col-md-10">
                @foreach (var item in Model.RolesList)
                {
                    <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                    @Html.Label(item.Value, new { @class = "control-label" })
                }
            </span>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "DealerIndex")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
